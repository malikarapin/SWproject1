<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/LightGrey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TeacherMenu" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize" >

            <Button
                android:id="@+id/savequstion"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="38dp"
                android:background="@drawable/custom_btn_seagull"
                android:text="@string/menu_btncheck"
                android:textColor="@color/White"
                android:textSize="@dimen/textsize20" />

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="41dp"
                android:background="@drawable/custom_btn_orange"
                android:text="@string/menu_btnlogout"
                android:textColor="@color/White"
                android:textSize="@dimen/textsize20"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/okbackmenu"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/btnviewcheck"
                android:layout_marginTop="61dp"
                android:background="@drawable/custom_btn_seagull"
                android:text="@string/menu_btncreatequestion"
                android:textColor="@color/White"
                android:textSize="@dimen/textsize20" />

            <Button
                android:id="@+id/btnviewcheck"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/savequstion"
                android:layout_marginTop="58dp"
                android:background="@drawable/custom_btn_seagull"
                android:text="View Check"
                android:textColor="@color/White"
                android:textSize="@dimen/textsize20" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
