<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rdiog1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StudentQuestion" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="408dp"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize" >

            <DigitalClock
                android:id="@+id/digitalClock1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="DigitalClock"
                android:textColor="@color/Black"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/linkFG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/digitalClock1"
                android:layout_below="@+id/digitalClock1"
                android:layout_marginTop="20dp"
                android:text="@string/question_txtquestion"
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/timecount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linkFG"
                android:layout_below="@+id/linkFG"
                android:layout_marginTop="22dp"
                android:text="@string/question_txttimecount"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnsubmitcheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/custom_btn_shakespeare"
                android:text="@string/question_btnsubmit"
                android:textColor="@color/Black" />

            <RadioGroup
                android:id="@+id/radioG1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/timecount" >

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    android:text="@string/question_txtans1" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question_txtans2" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question_txtans3" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question_txtans4" />
            </RadioGroup>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>