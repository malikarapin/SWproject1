<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rdiog1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StudentPasscode" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="429dp"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="36dp"
                android:text="@string/passcode_txtpasscode"
                android:textColor="@color/Black"
                android:textSize="23sp" />

            <EditText
                android:id="@+id/userlog"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/passlog"
                android:layout_alignBottom="@+id/passlog"
                android:layout_alignLeft="@+id/textView1"
                android:layout_marginLeft="16dp"
                android:ems="10"
                tools:ignore="TextFields" 
                android:maxLength="1"/>

            <EditText
                android:id="@+id/passlog"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="42dp"
                android:ems="10"
                android:textColorHint="@color/Black"
                tools:ignore="TextFields"
               android:maxLength="1"/>

            <EditText
                android:id="@+id/editText3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/userlog"
                android:layout_alignBottom="@+id/userlog"
                android:layout_toRightOf="@+id/userlog"
                android:ems="10"
               tools:ignore="TextFields" 
               android:maxLength="1">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editText4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText3"
                android:layout_alignBottom="@+id/editText3"
                android:layout_toRightOf="@+id/editText3"
                android:ems="10"
                tools:ignore="TextFields" 
                android:maxLength="1"/>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/userlog"
                android:layout_marginTop="84dp"
                android:background="@drawable/custom_btn_shakespeare"
                android:text="@string/passcode_btnenterpc"
                android:textColor="@color/Black" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/submit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="44dp"
                android:background="@drawable/custom_btn_orange"
                android:text="@string/passcode_btncancelpc"
                android:textColor="@color/Black" />
            
        </RelativeLayout>
    </ScrollView>

</LinearLayout>