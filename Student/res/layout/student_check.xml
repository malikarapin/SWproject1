<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rdiog1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StudentCheck" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="443dp"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize,UselessLeaf" >

            <TextView
                android:id="@+id/linkFG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/check_txtidCourse"
                android:textColor="@color/Black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/subject"
                style="@style/SpinnerItem.DropDownItem"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linkFG"
                android:layout_marginTop="18dp" />

            <DigitalClock
                android:id="@+id/digitalClock1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lon"
                android:layout_alignParentRight="true"
                android:text="DigitalClock"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/btnsubmitcheck"
                android:layout_marginTop="20dp"
                android:text="TextView"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lat"
                android:layout_marginTop="16dp"
                android:text="TextView"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnsubmitcheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/subject"
                android:layout_marginTop="147dp"
                android:background="@drawable/custom_btn_shakespeare"
                android:text="@string/check_btncheck"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/passcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/subject"
                android:layout_marginTop="78dp"
                android:ems="10"
                android:gravity="center"
                android:maxLength="4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:text="Passcode"
                android:textSize="21dp" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>