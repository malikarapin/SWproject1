<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rdiog1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StudentCheck" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="443dp"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize,UselessLeaf" >

            <TextView
                android:id="@+id/timecount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/subject"
                android:layout_marginTop="43dp"
                android:text="@string/check_txtcount"
                android:textColor="@color/Black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/linkFG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/check_txtidCourse"
                android:textColor="@color/Black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linkFG"
                android:layout_marginTop="18dp" />

            <DigitalClock
                android:id="@+id/digitalClock1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lon"
                android:layout_alignParentRight="true"
                android:text="DigitalClock"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button2"
                android:layout_marginTop="20dp"
                android:text="TextView"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txtviewcount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timecount"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/digitalClock1"
                android:text="12"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txtviewcount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtviewcount2"
                android:layout_alignBottom="@+id/txtviewcount2"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="38dp"
                android:text="10"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txtviewcount2"
                android:layout_marginTop="29dp"
                android:background="@drawable/custom_btn_shakespeare"
                android:text="@string/check_btncheck"
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/lon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lat"
                android:layout_marginTop="16dp"
                android:text="TextView"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/submit"
                android:layout_marginTop="27dp"
                android:background="@drawable/custom_btn_orange"
                android:text="@string/check_btncancel"
                android:textColor="@color/Black" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>